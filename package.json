{
  "name": "harvest-mcp-server-setup",
  "version": "0.1.2",
  "description": "Natural language time tracking with Harvest",
  "type": "module",
  "bin": {
    "harvest-mcp-server-setup": "./build/setup.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/server.js', '755')\"",
    "prepare": "npm run build",
    "start": "node build/server.js",
    "dev": "tsc && node --watch build/server.js",
    "watch": "tsc --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "docker:build": "docker build -t harvest-mcp-server .",
    "docker:run": "docker run -p 3000:3000 --env-file .env harvest-mcp-server"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/express-session": "^1.18.2",
    "axios": "^1.7.9",
    "chrono-node": "^2.7.8",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.24",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "nock": "^14.0.10",
    "pino-pretty": "^13.1.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "harvest",
    "time-tracking",
    "mcp",
    "claude",
    "natural-language"
  ],
  "author": "Adrian",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adrian-dotco/harvest-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/adrian-dotco/harvest-mcp-server/issues"
  },
  "homepage": "https://github.com/adrian-dotco/harvest-mcp-server#readme"
}
